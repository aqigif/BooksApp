{
  "include": [
    "src/types/additional.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "jest.config.js"
  ],
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
